#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>
set -euo pipefail

function topic() {
  echo "-----> $*"
}

function indent() {
	c='s/^/       /'
	case $(uname) in
		Darwin) sed -l "$c";;
		*)      sed -u "$c";;
	esac
}

# Default args to run it locally
BUILD_DIR=${1:-"./build"}
CACHE_DIR=${2:-"./cache"}
# BUILDPACK_DIR=$(dirname "$(dirname "$0")")

mkdir -p "$CACHE_DIR"
ZIP_FILE="$CACHE_DIR/font.zip"
TARGET_DIR="$BUILD_DIR/.fonts/"

topic "Fetching fonts"
curl -L --silent "https://fonts.google.com/download?family=Inter" --output "$ZIP_FILE"
unzip -x "$ZIP_FILE" -d TARGET_DIR

# Clean font cache
fc-cache -fv

# topic "List of $TARGET_DIR"
# ls "$TARGET_DIR";

topic "List of fonts"
fc-list | grep "Inter"
