#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>
set -euo pipefail

function topic() {
  echo "-----> $*"
}

function indent() {
	c='s/^/       /'
	case $(uname) in
		Darwin) sed -l "$c";;
		*)      sed -u "$c";;
	esac
}

BUILD_DIR="$1"
CACHE_DIR="$2"
# BUILDPACK_DIR=$(dirname "$(dirname "$0")")

mkdir -p "$CACHE_DIR"
ZIP_FILE="font.zip"
TARGET_DIR="$BUILD_DIR/.fonts"

topic "Fetching fonts"
cd "$CACHE_DIR"
curl -L --silent "https://fonts.google.com/download?family=Inter" --output $ZIP_FILE
unzip -xvzf "$ZIP_FILE" -C "$TARGET_DIR" | indent

# Clean font cache
fc-cache -fv

topic "List of fonts"
fc-list | grep "Inter"
